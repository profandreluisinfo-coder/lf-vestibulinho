# ========================================================
# Laravel – Arquivos de Ambiente (NUNCA versionar)
# ========================================================
.env
.env.*        # Except .env.example
!.env.example

# ========================================================
# Dependências / Builds
# ========================================================
/node_modules
/vendor
/public/build
/public/hot

# ========================================================
# Laravel – Cache, Logs e Arquivos Temporários
# ========================================================
/storage/*.key

# Conteúdo interno dessas pastas NÃO será versionado,
# pois cada uma possui .gitignore interno mantendo apenas a pasta
/storage/app/*
/storage/framework/*
/storage/logs/*
/storage/pail

# Mas mantenha o public:
!storage/app/public/

# Symlink criado pelo artisan storage:link
/public/storage

# ========================================================
# PHPUnit / Testes / Ferramentas
# ========================================================
.phpunit.cache
.phpunit.result.cache
.phpactor.json

# ========================================================
# Arquivos de Log / Debug de ferramentas JS
# ========================================================
npm-debug.log
yarn-error.log
pnpm-debug.log

# ========================================================
# Homestead
# ========================================================
Homestead.json
Homestead.yaml

# ========================================================
# Configurações de IDEs (evitar sujar o repositório)
# ========================================================
/.idea
/.vscode
/.fleet
/.nova
/.zed
/.phpstorm.meta.php

